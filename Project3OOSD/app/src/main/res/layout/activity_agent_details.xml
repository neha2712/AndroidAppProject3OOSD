<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.neha.project3oosd.AgentDetails">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a_id"
        android:text="ID"
        android:visibility="invisible"
        android:layout_below="@+id/a_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="122dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a_fname"
        android:text="FIRST NAME"
        android:textSize="20dp"
        android:paddingRight="8dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/a_id"
        android:layout_toEndOf="@+id/a_id" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a_lname"
        android:text="LAST NAME"
        android:textSize="20dp"
        android:layout_alignTop="@+id/a_fname"
        android:layout_toRightOf="@+id/a_fname"
        android:layout_toEndOf="@+id/a_fname" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a_phone"
        android:text="PHONE"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:layout_below="@+id/a_position"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:src="@drawable/phone"
        android:layout_below="@+id/a_position"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a_email"
        android:text="EMAIL"
        android:paddingLeft="8dp"

        android:layout_below="@+id/a_phone"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a_position"
        android:text="POSITION"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:layout_below="@+id/a_fname"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/e"
        android:layout_above="@+id/a_id"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignStart="@+id/imageView1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/position"

        android:layout_below="@+id/a_fname"
        android:layout_toRightOf="@+id/a_id"
        android:layout_toEndOf="@+id/a_id" />


</RelativeLayout>
